<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <View
        android:id="@+id/fondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="27dp"
        android:text="@string/titulomainactivity"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imagenprincipal"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fondo"
        app:layout_constraintTop_toTopOf="@+id/fondo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imagenprincipal"
        android:layout_width="220dp"
        android:layout_height="147dp"
        android:layout_gravity="center_horizontal|center_vertical|top"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="Imagen principal"
        android:scaleType="fitCenter"
        android:src="@drawable/imagenprincipalcircunferencia"
        app:layout_constraintBottom_toTopOf="@+id/lblcoordenadas"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <TextView
        android:id="@+id/lblcoordenadas"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="@string/coordenadas"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/coma"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <EditText
        android:id="@+id/coordenada2"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_marginStart="252dp"
        android:layout_marginLeft="252dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingresar la segunda coordenada"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/lbllongitud"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <EditText
        android:id="@+id/coordenada1"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="23dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingresar la primer coordenada"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/lbllongitud"
        app:layout_constraintEnd_toStartOf="@+id/coma"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <TextView
        android:id="@+id/coma"
        android:layout_width="45dp"
        android:layout_height="49dp"
        android:layout_marginStart="183dp"
        android:layout_marginLeft="183dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text=","
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/lbllongitud"
        app:layout_constraintEnd_toStartOf="@+id/coordenada2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <TextView
        android:id="@+id/lbllongitud"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="@string/longitud"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/longitud"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <EditText
        android:id="@+id/longitud"
        android:layout_width="93dp"
        android:layout_height="56dp"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginEnd="159dp"
        android:layout_marginRight="159dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingresar la longitud del radio"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/resolverboton"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <Button
        android:id="@+id/resolverboton"
        android:layout_width="121dp"
        android:layout_height="61dp"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:layout_marginBottom="9dp"
        android:text="@string/resolverbttn"
        app:layout_constraintBottom_toTopOf="@+id/DatosGenerales"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintStart_toStartOf="@+id/fondo" />

    <TextView
        android:id="@+id/DatosGenerales"
        android:layout_width="287dp"
        android:layout_height="99dp"
        android:layout_gravity="center_horizontal|center_vertical|bottom"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="7dp"
        android:text="@string/datosgral"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/fondo"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintStart_toStartOf="@+id/fondo" />


</androidx.constraintlayout.widget.ConstraintLayout>